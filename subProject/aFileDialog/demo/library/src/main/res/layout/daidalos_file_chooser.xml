<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:scrollbars="vertical">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/linearLayoutFiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical" />

    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayoutButtons"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonAdd"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:drawableStart="@drawable/ic_add_24dp"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_add_24dp"
            android:text="@string/daidalos_new_file"
            android:textColor="@android:color/white" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonOk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:drawableStart="@drawable/ic_done_24dp"
            android:gravity="center"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_done_24dp"
            android:text="@string/daidalos_ok"
            android:textColor="@android:color/white" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonCancel"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:drawableStart="@drawable/ic_close_24dp"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_close_24dp"
            android:text="@string/daidalos_cancel"
            android:textColor="@android:color/white" />

    </LinearLayout>
</LinearLayout>