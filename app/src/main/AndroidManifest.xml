<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ogcio.vanuatulanguages">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".DictionaryActivity"
            android:label="Dictionary"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SentencesActivity"
            android:label="@string/title_activity_sentences"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FlashCardsActivity"
            android:label="@string/title_activity_flash_cards"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChooseFlashCardSet"
            android:label="Flash Cards"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/splashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>